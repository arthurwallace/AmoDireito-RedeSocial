<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <View
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
      android:layout_alignParentTop="true"
      android:layout_marginTop="0dp"
      android:background="?attr/colorBubble"
      android:layout_width="match_parent"
      android:layout_height="1dp"/>
  <refractored.controls.CircleImageView
        android:id="@+id/card_pro_pic"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/textLight_color" />
    <com.github.library.bubbleview.BubbleLinearLayout
        android:orientation="vertical"
        app:arrowWidth="9dp"
        app:angle="10dp"
        app:arrowHeight="10dp"
        app:arrowPosition="10dp"
        app:arrowLocation="left"
        android:layout_marginBottom="2dp"
        android:layout_centerVertical="true"
        app:arrowCenter="false"
        android:minWidth="100dp"
        app:bubbleColor="?attr/colorBubble"
        android:layout_toEndOf="@id/card_pro_pic"
        android:id="@+id/bubble_layout"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_height="match_parent"
            android:id="@+id/username"
            android:textSize="13dp"
            android:gravity="top"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content" />
        <com.luseen.autolinklibrary.AutoLinkTextView
            android:id="@+id/active"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="0dp"
            android:textSize="13dp"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/time"
            android:textSize="9dp"
            android:gravity="bottom|end"
            android:layout_gravity="bottom|end"
            android:layout_below="@+id/active"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="18dp"
            android:paddingBottom="3dp" />
    </com.github.library.bubbleview.BubbleLinearLayout>
    <TextView
        android:layout_below="@+id/bubble_layout"
        android:layout_toEndOf="@id/card_pro_pic"
        android:layout_height="wrap_content"
        android:id="@+id/Like"
        android:textSize="12dp"
        android:gravity="top"
        android:text="@string/Btn_Like"
        android:translationX="8dp"
        android:textStyle="bold"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="15dp"
        android:layout_width="wrap_content" />
    <TextView
        android:layout_below="@+id/bubble_layout"
        android:layout_toEndOf="@id/Like"
        android:layout_height="wrap_content"
        android:id="@+id/reply"
        android:translationX="7dp"
        android:textSize="12dp"
        android:gravity="top"
        android:text="@string/Lbl_Reply"
        android:textStyle="bold"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content" />
</RelativeLayout>