<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:paddingStart="0dp"
    android:paddingEnd="0dp"
    android:layout_gravity="bottom|center_horizontal"
    android:id="@+id/linerSecondReaction"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:weightSum="3">
    <LinearLayout
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_width="0dp">
        <WoWonder.Library.Anjo.ReactButton
            android:id="@+id/beactButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="0dp"
            android:textSize="14sp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textColor="?attr/colorReact"
            android:tint="?attr/colorReact"
            android:background="?attr/selectableItemBackground"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:drawablePadding="10dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/SecondReactionLinearLayout"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="0dp">
        <TextView
            android:id="@+id/SecondReactionText"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:textSize="14sp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:focusable="false"
            android:textColor="?attr/colorReact"
            android:drawableTint="?attr/colorReact"
            android:drawablePadding="7dp"
            android:drawableStart="@drawable/icon_post_wonder_vector"
            android:text="@string/Btn_Wonder"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="2dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/CommentLinearLayout"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:id="@+id/CommentText"
            android:textSize="14sp"
            android:textColor="?attr/colorReact"
            android:drawableTint="?attr/colorReact"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/icon_post_comment_vector"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="0dp"
            android:text="@string/Lbl_Comment" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ShareLinearLayout"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="0dp">
        <TextView
            android:id="@+id/ShareText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_marginStart="7dp"
            android:textSize="12sp"
            android:drawableTint="?attr/colorReact"
            android:drawablePadding="7dp"
            android:drawableStart="@drawable/icon_post_share_vector"
            android:textColor="?attr/colorReact"
            android:text="@string/Lbl_Share"
            android:layout_marginEnd="4dp" />
    </LinearLayout>
</LinearLayout>