<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorFill" >
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:fitsSystemWindows="true">
      <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false" 
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            app:scrimAnimationDuration="100">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="11dp" 
                android:background="?attr/colorFill" >
                <RelativeLayout
                    android:id="@+id/layout_profile"
                    android:layout_width="match_parent"
                    android:layout_height="230dp">
                    <ImageView
                        android:id="@+id/iv1"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="235dp" />
                    <!--Page Title / Name-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@xml/framealfacolor"
                        android:orientation="vertical"
                        android:foregroundGravity="bottom"
                        android:gravity="bottom"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="false">
                        <TextView
                            android:id="@+id/Page_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textLight_color"
                            android:layout_above="@+id/page_urlName"
                            android:layout_centerHorizontal="true"
                            android:textSize="20sp"
                            android:paddingStart="65dp"
                            android:textStyle="bold"
                            android:layout_marginStart="67dp" />
                        <TextView
                            android:id="@+id/Page_Username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textLight_color"
                            android:layout_alignParentBottom="true"
                            android:layout_alignStart="@+id/Page_name"
                            android:layout_marginBottom="5dp"
                            android:paddingStart="65dp"
                            android:layout_marginStart="67dp"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <!--Top Toolbar-->
                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_marginTop="5dp"
                        app:contentInsetStart="0dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp">
                            <ImageView
                                android:id="@+id/image_back"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginStart="6dp"
                                android:src="@drawable/ic_action_ic_back" />
                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textLight_color"
                                android:layout_centerInParent="true"
                                android:textSize="20sp" />
                            <TextView
                                android:id="@+id/tv_EditPageinfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Lbl_Edit"
                                android:textStyle="bold"
                                android:textColor="@color/textLight_color"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="9dp"
                                android:textSize="16sp"
                                android:visibility="invisible" />
                        </RelativeLayout>
                    </android.support.v7.widget.Toolbar>
                </RelativeLayout>
                <!--Page Like Button / More-->
                <LinearLayout
                    android:id="@+id/liner1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="1dp"
                    android:layout_below="@+id/layout_profile"
                    android:layout_height="50dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4" />
                    <Button
                        android:id="@+id/likeButton"
                        android:layout_width="175dp"
                        android:layout_height="40dp"
                        android:text="@string/Btn_Like"
                        android:textStyle="normal"
                        android:textSize="12dp"
                        android:layout_weight="1"  
                        android:transitionName="Buttonchannel"
                        android:backgroundTint="#efefef"
                        android:background="#efefef"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/liner2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="1dp"
                    android:layout_below="@+id/liner1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <Button
                        android:id="@+id/actionButton"
                        android:layout_width="175dp"
                        android:layout_height="40dp"
                        android:visibility="invisible"
                        android:textStyle="normal"
                        android:textSize="13dp"
                        android:layout_weight="2"
                        android:transitionName="Buttonchannel"
                        android:backgroundTint="@color/accent"
                        android:background="#efefef"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/textLight_color" />
                    <ImageButton
                        android:id="@+id/messagebutton"
                        android:layout_width="48dp"
                        android:layout_height="40dp"  
                        android:src="@drawable/ic_message_user"
                        android:background="#efefef"
                        android:tint="#444"
                        android:backgroundTint="#efefef"
                        android:layout_marginEnd="5dp" />
                    <ImageButton
                        android:id="@+id/morebutton"
                        android:layout_width="48dp"
                        android:layout_height="40dp" 
                        android:src="@drawable/icon_post_more_vector"
                        android:background="#efefef"
                        android:tint="#444"
                        android:backgroundTint="#efefef"
                        android:layout_marginEnd="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ratingLiner"
                    android:layout_below="@+id/liner2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:foreground="?selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="8dp"
                    android:weightSum="4"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:foregroundGravity="center|center_horizontal"
                    android:gravity="center|start">
                    <TextView
                        android:id="@+id/ratingtextview"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:text="@string/Lbl_ratings"
                        android:textSize="14sp"
                        
                        android:layout_gravity="start"
                        android:layout_weight="0.6"
                        android:layout_marginStart="0dp"
                        android:foregroundGravity="center"
                        android:gravity="center" />
                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_marginTop="-2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars="5"
                        android:layout_marginStart="10dp"
                        android:layout_below="@+id/liner2"
                        android:stepSize="1"
                        android:rating="3.7"
                        android:secondaryProgressTint="@android:color/transparent"
                        android:progressTint="#FF9800"
                        android:foregroundGravity="center"
                        android:gravity="center" />
                </LinearLayout>
                <!--Page Like Count-->
                <LinearLayout
                    android:id="@+id/liner3"
                    android:layout_below="@+id/ratingLiner"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingStart="5dp"
                    android:foregroundGravity="center|center_horizontal"
                    android:gravity="center|start">
                    <TextView
                        android:id="@+id/IconLike"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="T"
                        android:textSize="22sp" 
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:layout_marginStart="10dp"   />
                    <TextView
                        android:id="@+id/LikeCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:textSize="14sp" 
                        android:layout_weight="15"
                        android:text="dsfdsfsdfsdfsdasd"
                        android:maxLines="1"
                        android:layout_gravity="start|center"
                        android:gravity="start|center"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>
                <!--Page Category-->
                <LinearLayout
                    android:id="@+id/liner4"
                    android:layout_below="@+id/liner3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="5dp"
                    android:foregroundGravity="center|center_horizontal"
                    android:gravity="center|start">
                    <TextView
                        android:id="@+id/IconCategory"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="T"
                        android:textSize="22sp" 
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:layout_marginStart="10dp" />
                    <TextView
                        android:id="@+id/CategoryText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="18dp"
                        android:textSize="14sp"
                        android:text="dsfdsfsdfsdfsdasd"
                        android:maxLines="1"
                        android:layout_gravity="start|center"
                        android:gravity="start|center"
                        android:layout_marginBottom="5dp" />
                </LinearLayout>
                <!--Page Members-->
                <LinearLayout
                    android:id="@+id/liner5"
                    android:layout_below="@+id/liner4"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="5dp"
                    android:foregroundGravity="center|center_horizontal"
                    android:gravity="center|start">
                    <TextView
                        android:id="@+id/IconMembers"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="T"
                        android:textSize="22sp" 
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:layout_marginStart="10dp" />
                    <TextView
                        android:id="@+id/MembersText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="18dp"
                        android:textSize="14sp"
                        android:text="@string/Lbl_InviteFriendsToPage"
                        android:maxLines="1"
                        android:layout_gravity="start|center"
                        android:gravity="start|center"
                        android:layout_marginBottom="5dp" />
                </LinearLayout>
                <!-- About Page info-->
                <LinearLayout
                    android:layout_below="@+id/liner5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="6dp"
                    android:background="?attr/colorFill"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="15dp"
                        android:text="@string/Lbl_About"
                        android:textSize="14sp" />
                    <WoWonder.Library.Anjo.SuperTextLibrary.SuperTextView
                        android:id="@+id/aboutdesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="center|start"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textSize="14sp"
                         />
                </LinearLayout>
                <!--Page Image Profile-->
                <RelativeLayout
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/layout_profile"
                    android:layout_marginTop="-70dp"
                    android:layout_marginStart="12dp">
                    <ImageView
                        android:id="@+id/image_profile"
                        android:layout_width="110dp"
                        android:layout_height="120dp"
                        android:src="@drawable/default_page" />
                    <LinearLayout
                        android:id="@+id/LinearEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="6dp"
                        android:background="?attr/colorFill"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:visibility="invisible">
                        <TextView
                            android:id="@+id/IconEdit"
                            android:layout_width="12dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="1dp"
                            android:text="T"
                            android:textSize="13sp" 
                            android:layout_gravity="center_vertical|left"
                            android:layout_weight="1"
                            android:layout_marginBottom="1dp"
                            android:layout_marginStart="7dp"
                            android:foregroundGravity="center_vertical"
                            android:gravity="center" />
                        <TextView
                            android:id="@+id/EditText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:textSize="13sp"
                            
                            android:text="@string/Lbl_Edit"
                            android:layout_marginTop="1dp"
                            android:layout_weight="15"
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical|left"
                            android:layout_gravity="center_vertical|left"
                            android:layout_marginBottom="2dp"
                            android:layout_marginEnd="6dp" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <WoWonder.Activities.NativePost.Extra.WRecyclerView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/newsfeedRecyler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:clickable="true"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:rippleColor="@android:color/transparent"
        android:src="@drawable/ic_add"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        app:backgroundTint="?attr/colorAccent"
        android:layout_marginBottom="30dp" />
</android.support.design.widget.CoordinatorLayout>